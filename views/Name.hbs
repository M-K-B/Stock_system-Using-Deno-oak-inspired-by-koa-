<body>
         <ul>
            <li><a href="/logout">Logout</a></li>
            <li><a href="/">Home</a></li>
            
        </ul>
        {{#each data}}
		<h3>Change the name from {{this.name}}</h3>
        
		<form action="/update/changeName/{{this.barcode}}" method="post" enctype="multipart/form-data">
            
			<p>
				<label for="name">New Name</label><br />
				<input type="text" name="name" placeholder="Item Name" value="" required autofocus>
			</p>

            <div id="submit">
			    <input type="submit" value="Change Name">
            </div>
        </form>

        <li><img src="/uploads/{{this.photo}}" width="100px" height="100px"></li>
        {{/each}}


		{{#if message}}
			{{{message}}}
		{{/if}}
		</main>
	</body>