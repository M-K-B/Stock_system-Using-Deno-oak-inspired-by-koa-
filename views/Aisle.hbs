<body>
         <ul>
            <li><a href="/logout">Logout</a></li>
            <li><a href="/">Home</a></li>
            
        </ul>
        {{#each data}}
		<h3>Change the Aisle of {{this.name}} from {{this.aisle}}</h3>
        
		<form action="/update/changeAisle/{{this.barcode}}" method="post" enctype="multipart/form-data">
            
			<p>
				<label for="aisle">Aisle</label><br />
				<input type="tel" minlength="2" size="2" maxlength="2" name="aisle" placeholder="aisle number" required>
			</p>
 
            <div id="submit">
			    <input type="submit" value="Change Aisle">
            </div>
        </form>

        <li><img src="/uploads/{{this.photo}}" width="100px" height="100px"></li>
        {{/each}}


		{{#if message}}
			{{{message}}}
		{{/if}}
		</main>
	</body>