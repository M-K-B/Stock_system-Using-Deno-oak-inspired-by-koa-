<body>
         <ul>
            <li><a href="/logout">Logout</a></li>
            <li><a href="/">Home</a></li>
            
        </ul>
        {{#each data}}
		<h3>Change the location of {{this.name}} from {{this.location}}</h3>
        
		<form action="/update/changeLocation/{{this.barcode}}" method="post" enctype="multipart/form-data">
            
			<p>
				
				<label for="location">Location</label><br />
				
				<input type="tel" minlength="2" size="2" maxlength="2" name="location" placeholder="location number" required>
				
			</p>
            <div id="submit">
			    <input type="submit" value="Change Location">
            </div>
        </form>

        <li><img src="/uploads/{{this.photo}}" width="100px" height="100px"></li>
        {{/each}}


		{{#if message}}
			{{{message}}}
		{{/if}}
		</main>
	</body>